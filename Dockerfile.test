FROM node:20-alpine

# Install PostgreSQL client, AWS CLI, and other utilities for database setup
RUN apk add --no-cache bash postgresql-client redis netcat-openbsd aws-cli curl

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY services/api-gateway/package.json ./services/api-gateway/

# Install dependencies (including dev dependencies for testing)
RUN npm ci --workspaces --include-workspace-root

# Copy application code
COPY . .

# Create logs directory
RUN mkdir -p logs coverage

# Make test scripts executable
RUN chmod +x scripts/test-all.sh scripts/test-docker.sh scripts/init-s3-test.sh

# Expose port (for potential health checks)
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "console.log('Health check passed')" || exit 1

# Use the S3 init script as entrypoint
ENTRYPOINT ["./scripts/init-s3-test.sh"]

# Default command
CMD ["./scripts/test-all.sh", "test"]