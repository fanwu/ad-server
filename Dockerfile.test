FROM node:20-alpine

# Install PostgreSQL client for database setup
RUN apk add --no-cache postgresql-client redis

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (including dev dependencies for testing)
RUN npm ci

# Copy application code
COPY . .

# Create logs directory
RUN mkdir -p logs coverage

# Make test scripts executable
RUN chmod +x scripts/test-all.sh scripts/test-docker.sh

# Expose port (for potential health checks)
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "console.log('Health check passed')" || exit 1

# Use bash as entrypoint for script execution
ENTRYPOINT ["/bin/sh", "-c"]

# Default command
CMD ["./scripts/test-all.sh test"]