# Test Environment Configuration
NODE_ENV=test
PORT=3001
LOG_LEVEL=error

# Test Database
DATABASE_URL=postgresql://adserver:dev_password@localhost:5432/adserver_test
DATABASE_TEST_URL=postgresql://adserver:dev_password@localhost:5432/adserver_test

# Redis (same instance, different namespace)
REDIS_URL=redis://localhost:6379
REDIS_TTL=300

# JWT Authentication (test secrets)
JWT_SECRET=test-jwt-secret-key-for-testing-only-not-for-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=24h

# Rate Limiting (more permissive for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN=http://localhost:3001

# Monitoring (disabled for tests)
ENABLE_METRICS=false