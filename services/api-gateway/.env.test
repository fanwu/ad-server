# Test Environment Configuration
NODE_ENV=test
PORT=3001
LOG_LEVEL=error

# Test Database
DATABASE_URL=postgresql://adserver:dev_password@localhost:5433/adserver_test
DATABASE_TEST_URL=postgresql://adserver:dev_password@localhost:5433/adserver_test

# Redis (test instance)
REDIS_URL=redis://localhost:6380
REDIS_TTL=300

# JWT Authentication (test secrets)
JWT_SECRET=test-jwt-secret-key-for-testing-only-not-for-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=24h

# Rate Limiting (more permissive for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN=http://localhost:3001

# Monitoring (disabled for tests)
ENABLE_METRICS=false

# AWS / S3 (LocalStack)
S3_ENDPOINT=http://localhost:4567
AWS_ENDPOINT=http://localhost:4567
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_BUCKET_NAME=ctv-ad-server-creatives